public class MyClass {
    private int myNumber = 11;

    public String printAndReturnNumber() {
        String output = "---" + myNumber + "---";
        System.out.println(output);
        return output;
    }
}

public class Main {
    public static void main(String[] args) {
        MyClass myObject = new MyClass();
        String output = "~~~" + myObject.printAndReturnNumber() + "~~~";
        System.out.println(output);
    }
}
